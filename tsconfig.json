{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": [
      "src/@types"
    ],
    "paths": {
      "@data/*": ["data/*"],
      "@components/*": ["src/components/*"],
      "@i18n/*": ["src/i18n/*"],
      "@layout/*": ["src/layout/*"],
      "@templates/*": ["src/templates/*"],
      "@custom-types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@static/*": ["static/*"]
    }
  },
  "exclude": ["node_modules", "public", ".cache", "README.md"],
  "include": ["src"]
}
